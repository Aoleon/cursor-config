{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["error", {
      "allow": []
    }]
  },
  "overrides": [
    {
      "files": [
        "server/test*.ts",
        "server/test*.js",
        "server/tests/**/*.ts",
        "server/tests/**/*.js",
        "server/**/__tests__/**/*.ts",
        "server/**/__tests__/**/*.js",
        "server/scripts/**/*.ts",
        "server/scripts/**/*.js",
        "server/migration/**/*.ts",
        "server/migration/**/*.js",
        "server/seeders/**/*.ts",
        "server/seeders/**/*.js",
        "server/db.ts",
        "server/vite.ts",
        "server/utils/logger.ts",
        "server/utils/error-handler.ts",
        "server/storage-poc.ts"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
